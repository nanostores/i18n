{
  "name": "@nanostores/i18n",
  "version": "0.1.0",
  "description": "A tiny (<500 bytes) i18n library for React/Preact/Vue/Svelte",
  "keywords": [
    "nano",
    "nanostores",
    "i18n",
    "internationalization",
    "localization",
    "react",
    "preact",
    "vue",
    "svelte"
  ],
  "scripts": {
    "unit": "tsm node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
    "test": "c8 yarn unit && eslint . && check-dts && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/i18n",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "peerDependencies": {
    "nanostores": "^0.5.0"
  },
  "devDependencies": {
    "@logux/core": "^0.7.2",
    "@logux/eslint-config": "^46.1.0",
    "@size-limit/preset-small-lib": "^7.0.3",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "c8": "^7.10.0",
    "check-dts": "^0.6.4",
    "clean-publish": "^3.4.3",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^5.1.1",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.5.6",
    "size-limit": "^7.0.3",
    "tsm": "^2.1.4",
    "typescript": "^4.5.2",
    "uvu": "^0.5.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "security/detect-non-literal-regexp": "off",
      "jest/no-conditional-expect": "off",
      "symbol-description": "off",
      "consistent-return": "off",
      "camelcase": "off"
    },
    "globals": {
      "jsdom": false
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Minimum",
      "import": "{ localeFrom, createI18n }",
      "limit": "477 B"
    },
    {
      "name": "Maximum",
      "import": "{ localeFrom, browser, createI18n, params, count, formatter }",
      "limit": "885 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
